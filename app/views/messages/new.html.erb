<div class="section section-small section-get-started">
  <div class="parallax filter filter-color-black">
    <div class="image3"></div>
    <div class="container">
      <div class="title-area">
        <h2 class="text-white">Contact Me!</h2>
        <p class="description"><br>I'd really like to make this website useful for everyone!<br>So give me any feedback that you think would be helpful!<br>Thanks!
      </div>
      <div class="section-contact-3 contact-container address-container address">
      <%= form_for @message, url: create_message_url do |f| %>
        <%= notice %>
        <%= @message.errors.full_messages.join(', ') %>
          <div class="address-container">
            <div class="address">
              <p><%= f.text_field :name, placeholder: 'name' %></p>
            </div>
            <div class="address">
              <p><%= f.email_field :email, placeholder: 'email' %></p>
            </div>
            <div class="address">
              <p><%= f.text_area :body, placeholder: 'message' %></p>
            </div>


        </div>
        </div>

        <div class="btn btn-lg">
          <%= f.submit 'Send' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
